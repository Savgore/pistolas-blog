---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /feeds/tags/{{ tag }}/feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ tag }} â€” {{ site.title }}</title>
  <subtitle>{{ site.description }}</subtitle>
  <link href="{{ site.url }}/feeds/tags/{{ tag }}/feed.xml" rel="self" type="application/atom+xml"/>
  <link href="{{ site.url }}/tag/{{ tag }}/" rel="alternate" type="text/html"/>
  <id>{{ site.url }}/tag/{{ tag }}/</id>
  {% set tagPosts = collections.posts | byTag(tag) %}
  {% if tagPosts.length > 0 %}
  <updated>{{ tagPosts | first | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  {% endif %}
  <author>
    <name>{{ site.author.name }}</name>
    <email>{{ site.author.email }}</email>
  </author>
  {% for post in tagPosts | limit(20) %}
  <entry>
    <title>{{ post.data.title | escape }}</title>
    <link href="{{ site.url }}{{ post.url }}" rel="alternate" type="text/html"/>
    <id>{{ site.url }}{{ post.url }}</id>
    <published>{{ post.date | dateToRfc3339 }}</published>
    <updated>{{ post.date | dateToRfc3339 }}</updated>
    {% if post.data.description %}<summary>{{ post.data.description | escape }}</summary>{% endif %}
    <content type="html"><![CDATA[{{ post.templateContent | htmlToAbsoluteUrls(site.url) }}]]></content>
  </entry>
  {% endfor %}
</feed>
